{{ node_exporter_log_path }}/{{ node_exporter_log_file }} {
  daily
  sharedscripts
  notifempty
  missingok
  rotate 7
  size 500M
  compress
  delaycompress
  create 664 {{ node_exporter_user }} {{ node_exporter_group }}
  postrotate
        [ ! -f /run/node_exporter/node_exporter.pid ] || systemctl restart node_exporter.service
  endscript
}
